<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/info_w"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@layout/rounded_corners"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    tools:context=".MapsActivity"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Status: Do not drink"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="12dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name: Lake Urubura"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="12dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Test added: 2019-15-26"
        android:textSize="20sp"
        android:layout_marginBottom="30dp"
        android:textAlignment="center"
        android:layout_marginLeft="12dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submitted by: Oscar Lundberg"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="12dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Distance: 16.4 km"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="12dp"/>
</LinearLayout>